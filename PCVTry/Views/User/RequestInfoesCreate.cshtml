@model PCVTry.Models.Requestinfo

@{
    ViewData["Title"] = "RequestInfoesCreate";
    Layout = "_Layout";
}

<!DOCTYPE html>




<html>


<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #1B295B;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

            .sidenav a {
                padding: 8px 8px 8px 32px;
                text-decoration: none;
                font-size: 15px;
                color: #f1f1f1;
                display: block;
                transition: 0.3s;
            }

                .sidenav a:hover {
                    color: #818181;
                }

            .sidenav .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 25px;
                margin-left: 50px;
            }

        @@media screen and (max-height: 450px) {
            .sidenav





        {
            padding-top: 10px;
        }

        .sidenav a {
            font-size: 10px;
        }
        }
    </style>

</head>

<body>
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/User/RequestInfoesCreate">Create</a>
        <a href="/User/UserTablesCreate">User Information</a>
        <a href="/User/UserRequirementsCreate">Requirements</a>
        <a href="/User/VmsRolegroupsCreate">Application Access (VMS Role/Group)</a>
        <a href="/User/OtsAccessCreate">Application Access (OTS Access)</a>
        <a href="/User/BpoRoleGroupsCreate">Application Access (BPO Role/Group)</a>
        <a href="/User/LrvRoleGroupCreate">Application Access (LRV Role/Group)</a>
    </div>




    <span style="font-size:20px;cursor:pointer" onclick="openNav()">&#9776; Menu</span>

    <script>
function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }</script> <br>

</body>

</html>

<h2>User Request Form</h2>

<!--<h4>Request Info</h4> -->
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RequestInfoesCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Today's Date</label>
                <input asp-for="TodayDate" class="form-control" />
                <span asp-validation-for="TodayDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Request Type</label>
                <select asp-for="RequestType">
                    <option value="new">New</option>
                    <option value="change">Change</option>
                    <option value="remove">Remove</option>
                    <option value="leave">Leave</option>
                    <option value="return">Return</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Requested By</label>
                <input asp-for="RequestByName" class="form-control" />
                <span asp-validation-for="RequestByName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Effective Start Date</label>
                <input asp-for="EffectiveStart" class="form-control" />
                <span asp-validation-for="EffectiveStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Effective End Date</label>
                <input asp-for="EffectiveEnd" class="form-control" />
                <span asp-validation-for="EffectiveEnd" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
